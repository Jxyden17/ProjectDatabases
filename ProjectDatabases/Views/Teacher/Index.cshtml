@model List<ProjectDatabases.Models.Teacher>

@{
    ViewData["Title"] = "Teachers";
}

<div class="text-center">
    <h1 class="display-4">Teachers</h1>
    <p>Number of teachers in the list: @Model.Count</p>
</div>


<table class="table">
    <thead>
        <tr>
           
            
            <th>First Name</th>
            <th>Last Name</th>
            <th>Phone number</th>
            <th>Age</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var teacher in Model)
            {
                <tr>
                    
                    <td>@teacher.FirstName</td>
                    <td>@teacher.LastName</td>
                    <td>@teacher.PhoneNumber</td>
                    <td>@teacher.Age</td>
                    <td>
                        <a href="/Teacher/Edit/@teacher.TeacherId">Edit</a>
                        <a href="/Teacher/Delete/@teacher.TeacherId">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
<a href="/Teacher/Create"> Add</a>