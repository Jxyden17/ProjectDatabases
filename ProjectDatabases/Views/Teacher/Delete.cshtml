@model ProjectDatabases.Models.Teacher
@{
    ViewData["Title"] = "Delete Teacher";
    string? errorMesssage = (string)ViewData["ErrorMessage"];
}

<h4>@errorMesssage</h4>
<h1>@ViewData["Title"]</h1>
<form action="/Teacher/Delete" method="POST">
    <input type="text" id="TeacherId" name="TeacherId" class="form-control" hidden value="@Model?.TeacherId" />

    <div class="form-group py-2">
        <label for="RoomId">Room Id:</label>
        <input type="text" id="RoomId" name="RoomId" class="form-control" readonly value="@Model?.RoomId" />
    </div>

    <div class="form-group py-2">
        <label for="FirstName">First Name:</label>
        <input type="text" id="FirstName" name="FirstName" class="form-control" readonly value="@Model?.FirstName" />
    </div>

    <div class="form-group py-2">
        <label for="LastName">Last Name:</label>
        <input type="text" id="LastName" name="LastName" class="form-control" readonly value="@Model?.LastName" />
    </div>

    <div class="form-group py-2">
        <label for="PhoneNumber">Phone number:</label>
        <input type="text" id="PhoneNumber" name="PhoneNumber" class="form-control" readonly value="@Model?.PhoneNumber" />
    </div>

    <div class="form-group py-2">
        <label for="Age">Age:</label>
        <input type="text" id="Age" name="Age" class="form-control" readonly value="@Model?.Age" />
    </div>

    <button type="submit" class="btn btn-danger">Delete teacher</button>
</form>

<a href="/Teacher/Index">Back to Teacher list</a>