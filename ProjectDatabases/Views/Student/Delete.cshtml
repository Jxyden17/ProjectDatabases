@model ProjectDatabases.Models.Student
@{
    ViewData["Title"] = "Delete Student";
}
<h1>@ViewData["Title"]</h1>

<form action="/Student/Delete" method="post">
    <input hidden type="number" name="StudentNumber" value="@Model?.StudentNumber" />
    <div class="form-group py-2">
        <label for="roomId">Room Id:</label>
        <input type="text" id="RoomId" name="RoomId" class="form-control" placeholder="Your room" readonly value="@Model?.RoomId" />
    </div>

    <div class="form-group py-2">
        <label for="firstName">First Name:</label>
        <input type="text" id="FirstName" name="FirstName" class="form-control" placeholder="Your first name" readonly value="@Model?.FirstName" />
    </div>

    <div class="form-group py-2">
        <label for="lastName">Last Name:</label>
        <input type="text" id="LastName" name="LastName" class="form-control" placeholder="Your last name" readonly value="@Model?.LastName" />
    </div>

    <div class="form-group py-2">
        <label for="phoneNumber">Phone Number:</label>
        <input type="text" id="PhoneNumber" name="PhoneNumber" class="form-control" placeholder="Your phone number" readonly value="@Model?.PhoneNumber" />
    </div>

    <div class="form-group py-2">
        <label for="classNumber">Class:</label>
        <input type="text" id="ClassNumber" name="ClassNumber" class="form-control" placeholder="Your class number" readonly value="@Model?.ClassNumber" />
    </div>
    <button type="submit" class="btn btn-danger">Delete</button>
</form>

<a href="/Student/Index">Back to list</a>
