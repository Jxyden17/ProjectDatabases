@model ProjectDatabases.Models.Room
@{
	ViewData["Title"] = "Edit Room";
	string? errorMessage = (string)ViewData["ErrorMessage"];
}

<h4>@errorMessage</h4>

<h1>@ViewData["Title"]</h1>
<form action="/Rooms/Edit" method="POST">
	<input hidden type="number" name="RoomID" value="@Model?.RoomID" />

	<div class="form-group py-2">
		<label for="RoomNumber">Room Number:</label>
		<input type="text" id="RoomNumber" name="RoomNumber" class="form-control" required value="@Model?.RoomNumber" />
	</div>

	<div class="form-group py-2">
		<label for="Capacity">Capacity:</label>
		<input type="number" id="Capacity" name="Capacity" class="form-control" min="1" max="10" required value="@Model?.Capacity" />
	</div>

	<div class="form-group py-2">
		<label for="Type">Type:</label>
		<input type="text" id="Type" name="Type" class="form-control" required value="@Model?.Type" />
	</div>

	<button type="submit" class="btn btn-success">Save changes</button>
</form>

<a href="/Rooms/Index">Back to Rooms list</a>